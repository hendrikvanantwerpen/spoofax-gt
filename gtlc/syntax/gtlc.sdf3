module gtlc

imports Common gtlc-source gtlc-core types

context-free start-symbols Program

sorts Program context-free syntax
    
  Program.Expr = 
    <<Expr>>
  
  Program.ExprC = 
    <core <Expr>>

  Program.Elaborate = <
    <Expr>
    elaborate as
    <ExprC>
  >
  
template options

  ID = keyword { reject }
  keyword -/- [a-zA-Z0-9]