module gtlc

imports
  
  completion/completion
  pp
  outline
  analysis
  elaborate
  interpreter

rules // Debugging
  
  debug-show-aterm:
    (node, _, _, path, project-path) -> (filename, result)
    with
      filename := <guarantee-extension(|"aterm")> path
    ; result   := node

    
  eval-program:
    (node, _, _, path, project-path) -> (filename, result)
    with
      filename := <guarantee-extension(|"aterm")> path
    ; result   := <debug(!"a: "); eval; debug(!"b: ")> node
    